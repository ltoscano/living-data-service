# Server Configuration
PORT=3000                          # Port where the server will run
NODE_ENV=development              # Environment: development, production, test
BASE_URL=http://localhost:3000    # Base URL for generating public links

# Database
DB_PATH=./data/documents.db       # Path to SQLite database file

# File retention system - number of days after which old versions are deleted
RETENTION_DAYS=30                 # Days to keep old document versions before deletion

# Cleanup scheduler - runs every X minutes to clean old files
CLEANUP_INTERVAL_MINUTES=5        # How often to run cleanup (in minutes)

# File Limits
MAX_FILE_SIZE=50MB               # Maximum file size allowed for upload
MAX_FILES_PER_USER=100           # Maximum number of files per user

# Security (optional)
JWT_SECRET=change-this-to-a-random-secret-key    # Secret key for JWT tokens - CHANGE IN PRODUCTION
ALLOWED_ORIGINS=http://localhost:3000            # Comma-separated list of allowed CORS origins
SECURE_COOKIES=false                            # Set to true in production with HTTPS

# Demo Mode (optional) - Show demo credentials in login form
# DEMO_MODE=true                  # Uncomment to show demo login info on login screen

# Superuser credentials - Default admin account created on first startup
SUPERUSER_NAME=admin              # Username for the default admin account
SUPERUSER_PASSWD=admin123         # Password for the default admin account - CHANGE IN PRODUCTION

# Keycloak Configuration (optional - if enabled, adds Keycloak authentication alongside local accounts)
ENABLE_KEYCLOAK=false                                    # Set to true to enable Keycloak integration
KEYCLOAK_SERVER_URL=https://your-keycloak-server.com    # URL of your Keycloak server
KEYCLOAK_REALM=your-realm-name                          # Keycloak realm name
CLIENT_ID=living-data-service-client                    # Keycloak client ID
CLIENT_SECRET=your-client-secret-here                   # Keycloak client secret - GET FROM KEYCLOAK ADMIN
REDIRECT_URI=http://localhost:3000/auth/callback        # OAuth callback URL - must match Keycloak client config
SESSION_SECRET=your-random-session-secret-key-here      # Secret for session encryption - GENERATE RANDOM VALUE
