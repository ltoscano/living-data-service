# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Database
DB_PATH=./data/documents.db

# File retention system - number of days after which old versions are deleted
RETENTION_DAYS=30

# Cleanup scheduler - runs every X minutes to clean old files
CLEANUP_INTERVAL_MINUTES=5

# File Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_USER=100

# Security (optional)
JWT_SECRET=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000

# Demo Mode (optional)
DEMO_MODE=false
